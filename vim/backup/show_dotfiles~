#!/bin/sh
# 2012-02/24:jeff
#
#		~/bin/show_dotfiles
#
# Show/hide dotfiles within Finder on OSX 
#

if [ "$(defaults read com.apple.finder AppleShowAllFiles)" = "FALSE" ]; then
	exec "defaults write com.apple.finder AppleShowAllFiles TRUE"
	exec "killall Finder"
elif [ "$(defaults read com.apple.finder AppleShowAllFiles)" = "TRUE" ]; then
	exec "defaults write com.apple.finder AppleShowAllFiles FALSE"
	exec "killall Finder"
fi
